<main class="main">
<div class="main-1"></div>
<div class="main-2">
   
     <h1 class="section-title">ðŸš€ Our Jobs</h1>
    <% admin.forEach((item) => { %>
    <div class="job-card">
      <img src="/uploads/<%= item.companylogo %>" alt="<%= item.companylogo %>" class="company-logo" />
      <div class="job-details-main">
        <h2><%= item.companyname %></h2>
        <p class="position"><%= item.jobname %></p>
        <p class="description">
          <%= item.jobdescription %>
        </p>
        <button class="view-btn" onclick="location.href='/aaideology/<%= item._id %>'">View Details â†’</button>
      </div>
    </div>


    

    
    <% }); %>
    
</div>

</main>

<div class="review">
    <div class="rev-head">
        <h2>Reviews</h2>
    </div>
    
        
     
        
    <% if (user) { %>
        
      
    <form class="post-rev">
        
        <div class="name-review">
            <input type="hidden" name="name" class="review-name" value="<%= user.username %>" id="name-rew" placeholder="Name">
        </div>
        <div class="stars">
            
            <input type="radio" name="star" id="star5"><label for="star5">&#9733</label>
            <input type="radio" name="star" id="star4"><label for="star4">&#9733</label>
            <input type="radio" name="star" id="star3"><label for="star3">&#9733</label>
            <input type="radio" name="star" id="star2"><label for="star2">&#9733</label>
            <input type="radio" name="star" id="star1"><label for="star1">&#9733</label>
        </div>
        <div class="rating-conditions">
            <h5 class="very-bad">Very Bad</h5>
            <h5 class="bad">Bad</h5>
            <h5 class="good">Good</h5>
            <h5 class="very-good">Very Good</h5>
            <h5 class="excellent">Excellent</h5>
        </div>
        <div class="rev-comment">
            <textarea placeholder="Comments" name="comment" id="comment" cols="30" rows="3"></textarea>
        </div> 
        <div class="rev-sub">
            <button type="submit" class="submit-rev">Submit</button>
        </div>
    </form>
    <% } else { %>
        <h3 class="login-to-review" style="font-size: 25px;"><a style="color: black;" href="/user/login">Login</a> to review</h3>
      <% } %>
    
    
    <div class="all-reviews">
        <div class="reviews-cards-container">
            <% reviews.forEach((element) => { %>
            <div class="review-cards">
                <div class="head-all-rev">
                    <h3 class="name-all-rev"><%= element.name %></h3>
                    <img class="three" src="/photos/three.png" width="20px" alt="" srcset="">
                   
                </div>
                <div class="stars">
                    <% for (let i = 5; i >= 1; i--) { %>
                        <input type="radio" name="star<%= element._id %>" id="star<%= i %>_<%= element._id %>" 
                               <%= element.rating == i ? 'checked' : '' %> disabled>
                        <label for="star<%= i %>_<%= element._id %>">&#9733</label>
                    <% } %>
                </div>
                <div class="comment-all-rev">
                    <p class="all-comment-rev"><%= element.comment %></p>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>
